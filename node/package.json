{
  "name": "rhythm",
  "version": "0.1.0",
  "description": "A lightweight durable execution framework using only Postgres",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "napi": {
    "name": "rhythm",
    "triples": {
      "defaults": true,
      "additional": [
        "x86_64-apple-darwin",
        "aarch64-apple-darwin",
        "x86_64-unknown-linux-gnu",
        "aarch64-unknown-linux-gnu"
      ]
    }
  },
  "scripts": {
    "build": "tsc",
    "build:native": "napi build --cargo-cwd native --platform --release --pipe \"prettier -w\"",
    "build:native:debug": "napi build --cargo-cwd native --platform",
    "build:all": "npm run build:native && npm run build",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "lint": "eslint src/**/*.ts examples/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\" \"examples/**/*.ts\"",
    "prepare": "npm run build",
    "example:simple": "npx tsx examples/simple.ts",
    "example:signal": "npx tsx examples/signal.ts",
    "example:enqueue": "npx tsx examples/enqueue.ts",
    "worker": "npx tsx src/cli.ts worker"
  },
  "keywords": [
    "workflow",
    "orchestration",
    "durable-execution",
    "postgres",
    "async",
    "queue"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.1.0"
  },
  "bin": {
    "rhythm-node": "./dist/cli.js"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.18.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
