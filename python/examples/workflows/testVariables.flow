// Test workflow for variable assignment and passing
// This workflow demonstrates:
// 1. Awaited task with variable assignment
// 2. Using bare identifier variable references in JSON
// 3. Multiple variables
workflow(ctx, inputs) {
  // Create an order and capture the result
  let order_id = await task("bench_task", { "payload_size": 100 })

  // Use the order_id in the next task (bare identifier syntax)
  await task("bench_task", { "order_id": order_id, "payload_size": 0 })

  // Fire-and-forget task with variable assignment
  let log_id = task("bench_task", { "msg": "logged" })

  // Another task that uses both variables
  await task("bench_task", { "order": order_id, "log": log_id })
}
