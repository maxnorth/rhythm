// For Loop Examples Workflow
// Demonstrates various for loop patterns with the Rhythm DSL

workflow(ctx, inputs) {
  // Example 1: Simple for loop with inline array
  for (let num in [1, 2, 3]) {
    Task.run("log", { message: "Processing number", value: num })
  }

  // Example 2: For loop with member access iterable
  for (let order in inputs.orders) {
    await Task.run("processOrder", {
      orderId: order.id,
      amount: order.amount
    })
  }

  // Example 3: For loop with variable iterable
  let items = await Task.run("fetchItems", {})
  for (let item in items) {
    await Task.run("processItem", {
      itemId: item.id,
      name: item.name
    })
  }

  // Example 4: Mixed await and fire-and-forget in loop
  for (let user in inputs.users) {
    // Log the start (fire-and-forget)
    Task.run("logStart", { userId: user.id })

    // Process user (await completion)
    await Task.run("processUser", { userId: user.id })

    // Send notification (fire-and-forget)
    Task.run("sendNotification", { userId: user.id, type: "complete" })
  }

  // Example 5: Nested for loops
  for (let category in inputs.categories) {
    for (let product in category.products) {
      await Task.run("processProduct", {
        categoryId: category.id,
        productId: product.id,
        name: product.name
      })
    }
  }

  // Example 6: Complex data transformation
  let orders = await Task.run("fetchOrders", { userId: inputs.userId })
  for (let order in orders) {
    // Validate order
    let validation = await Task.run("validateOrder", { orderId: order.id })

    if (validation.isValid == true) {
      // Process each item in the order
      for (let item in order.items) {
        await Task.run("processOrderItem", {
          orderId: order.id,
          itemId: item.id,
          quantity: item.quantity
        })
      }

      // Send confirmation
      Task.run("sendConfirmation", { orderId: order.id })
    }
  }

  // Return success
  await Task.run("complete", { status: "success" })
}
