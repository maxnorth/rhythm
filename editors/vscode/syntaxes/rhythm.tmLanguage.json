{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Rhythm",
  "scopeName": "source.rhythm",
  "patterns": [
    { "include": "#front-matter" },
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#constants" },
    { "include": "#builtins" },
    { "include": "#operators" },
    { "include": "#punctuation" },
    { "include": "#function-calls" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "front-matter": {
      "name": "meta.front-matter.rhythm",
      "begin": "^```",
      "end": "^```",
      "beginCaptures": {
        "0": { "name": "punctuation.definition.front-matter.begin.rhythm" }
      },
      "endCaptures": {
        "0": { "name": "punctuation.definition.front-matter.end.rhythm" }
      },
      "patterns": [
        {
          "name": "source.yaml.embedded.rhythm",
          "match": ".*"
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.rhythm",
          "match": "//.*$"
        },
        {
          "name": "comment.block.rhythm",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.rhythm",
          "match": "\\b(if|else|while|for|return|break|continue|try|catch)\\b"
        },
        {
          "name": "keyword.control.flow.rhythm",
          "match": "\\b(await)\\b"
        },
        {
          "name": "keyword.operator.logical.rhythm",
          "match": "\\b(of|in)\\b"
        },
        {
          "name": "storage.type.rhythm",
          "match": "\\b(let|const)\\b"
        },
        {
          "name": "storage.modifier.async.rhythm",
          "match": "\\b(async)\\b"
        },
        {
          "name": "storage.type.function.rhythm",
          "match": "\\b(function)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.rhythm",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.rhythm",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.rhythm",
          "match": "-?\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.rhythm",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.null.rhythm",
          "match": "\\b(null)\\b"
        }
      ]
    },
    "builtins": {
      "patterns": [
        {
          "name": "support.class.builtin.rhythm",
          "match": "\\b(Inputs|Task|Timer|Signal|Workflow|Promise|Math)\\b"
        },
        {
          "name": "support.function.builtin.rhythm",
          "match": "\\b(run|delay|next|all|any|race|floor|ceil|abs|round|min|max)(?=\\s*\\()"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.rhythm",
          "match": "(===?|!==?|<=?|>=?)"
        },
        {
          "name": "keyword.operator.logical.rhythm",
          "match": "(&&|\\|\\||!|\\?\\?)"
        },
        {
          "name": "keyword.operator.arithmetic.rhythm",
          "match": "(\\+|-|\\*|/)"
        },
        {
          "name": "keyword.operator.assignment.rhythm",
          "match": "="
        },
        {
          "name": "keyword.operator.ternary.rhythm",
          "match": "(\\?|:)"
        },
        {
          "name": "keyword.operator.optional-chaining.rhythm",
          "match": "\\?\\."
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.separator.comma.rhythm",
          "match": ","
        },
        {
          "name": "punctuation.terminator.rhythm",
          "match": ";"
        },
        {
          "name": "punctuation.accessor.rhythm",
          "match": "\\."
        },
        {
          "name": "meta.brace.curly.rhythm",
          "match": "[{}]"
        },
        {
          "name": "meta.brace.square.rhythm",
          "match": "[\\[\\]]"
        },
        {
          "name": "meta.brace.round.rhythm",
          "match": "[()]"
        }
      ]
    },
    "function-calls": {
      "patterns": [
        {
          "name": "meta.function-call.rhythm",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": { "name": "entity.name.function.rhythm" }
          }
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.rhythm",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
